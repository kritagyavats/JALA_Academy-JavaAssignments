//Ques 2) Write a function to calculate the average value of an array of integers.

package A04_Arrays;

import java.util.Scanner;

public class Ques02 {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        System.out.print("Enter the size of array: ");
        int size = scan.nextInt();

        int arr[] = new int[size];
        int sum = 0;
        int avg;
        int j = 1;                  //To denote the j-th number of element we are inputting.

        for (int i = 0; i < size; i++)
        {
            System.out.print("Enter your number " + j + ": ");
            arr[i] = scan.nextInt();
            j++;
        }

        for (int i = 0; i < size; i++)
        {
            sum = sum + arr[i];
        }

        avg = sum/size;
        System.out.print("Average value: "+ avg);
    }
}
